{
  "compilerOptions": {
    "outDir": "build",
    "rootDir": "src",
    "lib": [
      "es2015",
      "dom",
      "webworker",
      "es2018"
    ],
    "target": "es2018",
    "module": "CommonJS",
    "jsx": "react",
    "declarationMap": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "watch": false,
    "strictNullChecks": false,
    "alwaysStrict": false,
    "strict": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@augurproject/types/types",
      "node_modules/@types"
    ],
    "declaration": true,
    "emitDeclarationOnly": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "moduleResolution": "node",
    "paths": {
      "apollo/*": [
        "./apollo/*"
      ],
      "assets/*": [
        "./assets/*"
      ],
      "components/*": [
        "./components/*"
      ],
      "stores/*": [
        "./stores/*"
      ],
      "utils/*": [
        "./utils/*"
      ]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src/index.tsx", "src"],
  "exclude": ["**/node_modules", "**/build", "**/dist"],
}