{
  "name": "Augur | NFL Market Creation - ${NFL_MARKET_FACTORY}",
  "initiators": [
    {
      "type": "web"
    },
    {
      "type": "cron",
      "params": {
        "schedule": "CRON_TZ=UTC 13 14 * * 2"
      }
    },
    {
      "type": "cron",
      "params": {
        "schedule": "CRON_TZ=UTC 08 14 * * 2"
      }
    }

  ],
  "tasks": [
    {
      "type": "augur-adapter",
      "params": {
        "sport": "nfl",
        "method": "create",
        "startBuffer": 86400,
        "daysInAdvance": 7,
        "contractAddress": "${NFL_MARKET_FACTORY}"
      }
    }
  ]
}
