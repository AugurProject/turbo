{
  "name": "@augurproject/smart",
  "version": "1.0.0",
  "main": "dist",
  "repository": "https://github.com/AugurProject/turbo/packages/smart",
  "license": "MIT",
  "scripts": {
    "build": "yarn contracts:build && tsc -b",
    "build:watch": "tsc -b -w",
    "test": "hardhat test",
    "contracts:build": "hardhat --config hardhat.typechain.config.ts typechain && hardhat compile",
    "contracts:deploy": "yarn contracts:build && yarn hardhat deploy",
    "contracts:verify": "hardhat verify",
    "ethereumNode": "hardhat node",
    "contracts:OVM": "npx hardhat --network optimism compile",
    "test:OVM": "npx hardhat --network optimism test",
    "contracts:deploy:OVM": "npx hardhat --network optimism deploy"
  },
  "files": [
    "./contracts",
    "./src"
  ],
  "devDependencies": {
    "@eth-optimism/smock": "^0.2.1-alpha.0",
    "@nomiclabs/hardhat-ethers": "^2.0.0",
    "@nomiclabs/hardhat-etherscan": "^2.1.1",
    "@nomiclabs/hardhat-waffle": "^2.0.0",
    "@typechain/ethers-v5": "^6.0.3",
    "@types/chai": "^4.2.15",
    "@types/mocha": "^8.2.1",
    "@types/node": "^14.14.35",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "chai": "^4.3.4",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "ethereum-waffle": "^3.0.0",
    "ethers": "^5.0.0",
    "hardhat": "^2.1.1",
    "hardhat-abi-exporter": "^2.2.0",
    "hardhat-contract-sizer": "^2.0.3",
    "hardhat-docgen": "^1.1.0",
    "hardhat-typechain": "^0.3.5",
    "ts-generator": "^0.1.1",
    "ts-node": "^9.1.1",
    "typechain": "^4.0.3",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "@eth-optimism/contracts": "^0.2.4",
    "@eth-optimism/dev": "^1.1.1",
    "@eth-optimism/hardhat-ovm": "^0.0.2",
    "@eth-optimism/plugins": "^1.0.0-alpha.2",
    "@eth-optimism/watcher": "^0.0.1-alpha.9",
    "prettier-plugin-solidity": "^1.0.0-beta.6"
  }
}
